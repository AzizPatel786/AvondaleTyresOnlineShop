@model IEnumerable<ProductModel>
@using AvondaleTyresOnlineShop.Models;

@{
    Layout = "_Layout";
}

<div class="container">
    <h3 class="display-4">All products</h3>
    <div class="row">

        @foreach (var product in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img src="@product.CoverImageUrl" class="img-thumbnail" />
                    <div class="card-body">
                        <h3 class="card-title">@product.Item</h3>
                        <p class="card-text">@product.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a asp-route="productDetailsRoute" asp-route-id="@product.Id"
                                   class="btn btn-sm btn-outline-secondary">View details</a>
                            </div>
                            <small class="text-muted">@product.CategoryEnum</small>
                        </div>
                    </div>
                </div>
            </div>
        }


    </div>
</div>